# Environment Configuration Example
# Copy this file to .env and fill in your actual values

# Environment
# Options: development, production, testing
# Set to "testing" to use relaxed rate limits for running test suites
ENVIRONMENT=development
DEBUG=True

# Testing mode (alternative to ENVIRONMENT=testing)
# Set to true when running automated tests
TESTING=false

# Application
APP_NAME=Kenya SMB Accounting MVP
APP_VERSION=1.0.0

# Server
HOST=0.0.0.0
PORT=8000

# Supabase Configuration
# Get these from your Supabase project settings
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key-here
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Database Configuration
# Format: postgresql+asyncpg://postgres.[project-ref]:[password]@aws-0-[region].pooler.supabase.com:6543/postgres
# Get connection details from Supabase > Project Settings > Database
DATABASE_URL=postgresql+asyncpg://postgres.your-project:[YOUR_PASSWORD]@aws-0-ap-southeast-1.pooler.supabase.com:6543/postgres
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10
DATABASE_ECHO=False

# JWT Configuration
# Generate a secure random string: python -c "import secrets; print(secrets.token_urlsafe(64))"
JWT_SECRET_KEY=your-secret-key-here-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Encryption Configuration
# CRITICAL: Generate a secure key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# NEVER commit this key to version control
# Use different keys for different environments
ENCRYPTION_KEY=your-encryption-key-here-change-this-in-production

# UploadThing Configuration
# Get this from your UploadThing dashboard
UPLOADTHING_TOKEN=your-uploadthing-token-here

# CORS Configuration
# Comma-separated list of allowed origins
CORS_ORIGINS=http://localhost:3000,http://localhost:5173,http://127.0.0.1:3000,http://127.0.0.1:5173
CORS_ALLOW_CREDENTIALS=True

# Cache Configuration (in-memory, no Redis for MVP)
CACHE_DEFAULT_TTL=300
CACHE_MAX_SIZE=1000

# Rate Limiting
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Email Configuration (Brevo SMTP)
# Set EMAIL_ENABLED=True in production to enable email sending
# Get your SMTP credentials from: https://app.brevo.com/settings/keys/smtp
EMAIL_ENABLED=False
SMTP_HOST=smtp-relay.brevo.com
SMTP_PORT=587
SMTP_USER=your-brevo-login-email@example.com
SMTP_PASSWORD=your-brevo-smtp-key
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=Kenya SMB Accounting
SMTP_USE_TLS=True

# To get Brevo SMTP credentials:
# 1. Log in to https://app.brevo.com
# 2. Go to Settings > SMTP & API
# 3. Copy your SMTP server login (your email) and SMTP key (password)
# 4. Verify your sender email in Settings > Senders & IP

# LlamaParse Configuration (for document parsing)
# Get this from https://cloud.llamaindex.ai/
LLAMA_CLOUD_API_KEY=your-llama-cloud-api-key-here

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=json
